<blockquote class="posts">
	<p><%= micropost.content %></p>
	<h6><%= time_ago_in_words(micropost.created_at) %>
		<% if current_user?(micropost.user) %>
			| <%= link_to "", micropost_path(micropost), :method => :delete, data: { confirm: "You sure?" }, :class=>"icon-trash" %>
		<% end %>
	</h6>
</blockquote>

