<blockquote class="posts" id="<%= micropost.id %>">
	<p><%= micropost.content %></p>
	<h5><%= time_ago_in_words(micropost.created_at) %> | <%= micropost.up %> <%= link_to " Likes", voteup_micropost_path(micropost.id), :class => "icon-thumbs-up"%> | <%= micropost.down %> <%= link_to " Dislikes", votedown_micropost_path(micropost.id), :class => "icon-thumbs-down"%>
		<% if current_user?(micropost.user) %>
			| <%= link_to "", micropost_path(micropost), :method => :delete, data: { confirm: "You sure?" }, :class=>"icon-trash" %>
		<% end %>
	</h5>
  	<% if micropost.comments.any? %>
		<%= render micropost.comments %>
	<% end %>
		<%= render "comments/comment_form" , micropost: micropost %>
</blockquote>

