<%= render "browse/header" %>
<div class="body">
	<div class="right">
		<div id="my_posts">
		    	<ul class="users">
		    		<p><%= link_to @user.user_name, user_path %><br /><i><%= @user.first_name %> <%= @user.last_name %></i></p>
		    		<p><%= @user.microposts.count %> Posts | <%= link_to "#{@user.followers.count} Followers", followers_user_path %> | <%= link_to "#{@user.followed_users.count} Followers", following_user_path %></p>
		    	</ul>
		</div>
	</div>
	<div class="left">
		<div id="search">
			<%= form_tag users_path, :method => 'get' do %>
		    	<%= text_field_tag :search, params.has_key?("search") ? params[:search][:user_name, :first_name, :last_name, :email] : "" %><br/>
		    	<%= submit_tag "Search", :name => nil %>
			<% end %>
		</div>
		<div id="trends">
			<h4>Trends</h4>
			<ul>
				<li>list of trends</li>
			</ul>
		</div>
	</div>
</div>