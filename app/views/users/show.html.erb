<%= render "browse/header" %>
<% @user ||= current_user %>
<div class="body">
	<div class="right">
		<div id="my_posts">
			<div id="top"><h3><%= @user.user_name %></h3></div>
			<% if @user.microposts.any? %>
				<%= render @microposts %>
				<a href="#top"><div id="bottom"><h3>Top</h3></div></a>
			<% else %>
				<blockquote class="posts">
					<p>No Posts</p>
				</blockquote>
				<a href="#top"><div id="bottom"><h3></h3></div></a>
			<% end %>
		</div>
	</div>
	<div class="left">
		<div id="user_info">
			<h4><%= link_to @user.user_name, user_path(@user) %></h4>
			<p><i><%= @user.first_name %> <%= @user.last_name %></i></p>
			<p><%= @user.microposts.count %> Posts | <%= render "users/follow_stats" %></p>
		    <%= render 'users/follow_form' if signed_in? %>
			<% if @user.user_bio %>
				<p><small><%= @user.user_bio %></small></p>
			<% end %>
		</div>
	</div>
</div>