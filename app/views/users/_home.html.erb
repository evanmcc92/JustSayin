<% @user = current_user %>
<div class="right">
	<div id="posts_stream">
		<h3>Recent Posts</h3>
			<% if @feed_items.any? %>
				<%= render partial: 'browse/feed_item', collection: @feed_items %>
			<% end %>
	</div>
</div>

<div class="left">
	<div id="search">
		<% form_tag users_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag "Search", :name => nil %>
		<% end %>
	</div>
	<div id="user_info">
		<h4><%= link_to @user.user_name, user_path(@user) %></h4>
		<p><i><%= @user.first_name %> <%= @user.last_name %></i></p>
		<p><%= @user.microposts.count %> Posts | <%= render "users/follow_stats" %></p>
	    <%= render 'users/follow_form' if signed_in? %>
		<p><%= @user.user_bio %></p>
		<%= render "microposts/micropost_form" %>
	</div>
	<div id="trends">
		<h4>Trends</h4>
		<ul>
			<li>list of trends</li>
		</ul>
	</div>
</div>