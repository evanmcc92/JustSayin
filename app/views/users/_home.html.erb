<% @user = current_user %>
<div class="right">
	<div id="posts_stream">
		<div id="top"><h3>Recent Posts</h3></div>
			<% if @feed_items.any? %>
				<%= render partial: 'browse/feed_item', collection: @feed_items %>
			<% end %>
		<a href="#top"><div id="bottom"><h3>Top</h3></div></a>
	</div>
</div>

<div class="left">
	<div id="user_info">
		<h4><%= link_to @user.user_name, user_path(@user) %></h4>
		<p><i><%= @user.first_name %> <%= @user.last_name %></i></p>
		<p><%= @user.microposts.count %> Posts | <%= render "users/follow_stats" %></p>
	    <%= render 'users/follow_form' if signed_in? %>
		<small><%= @user.user_bio %></small>
		<%= render "microposts/micropost_form" %>
	</div>
</div>