<div class="left">
	<div id="user_info">
		<h4><%= link_to @user.user_name, user_path(@user) %></h4>
		<p><%= @user.first_name %> <%= @user.last_name %></p>
		<p><%= @user.microposts.count %> Posts | <%= render "users/follow_stats" %></p>
	    <%= render 'users/follow_form' if signed_in? %>
		<p><%= @user.user_bio %></p>
	</div>
	<div id="create_post">
		<h4>Create a Post</h4>
		<%= render "microposts/micropost_form" %>
	</div>
	<div id="trends">
		<h4>Trends</h4>
		<ul>
			<li>list of trends</li>
		</ul>
	</div>
</div>