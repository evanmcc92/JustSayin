<%= render "browse/header" %>
<div class="body">
	<div class="right">
	<div id="my_posts">
		 	<div id="top"><h3><%= @title %></h3></div>
			<% if @users.any? %>
				<blockquote class="posts">
				<% @users.each do |f| %>
		    		<p><%= link_to f.user_name, user_path(f) %><br /><i><%= f.first_name %> <%= f.last_name %></i></p>
					<% if f.user_bio %>
						<small><%= f.user_bio %></small>
					<% end %>
		    		<p><%= f.microposts.count %> Posts | <%= link_to "#{f.followers.count} Followers", followers_user_path(f) %> | <%= link_to "#{f.followed_users.count} Followers", following_user_path(f) %></p>
		    	<% end %>
		    	</blockquote>
				<a href="#top"><div id="bottom"><h3>Top</h3></div></a>
		    <% else %>
				<blockquote class="posts">
		    		<p>No one just yet. Give it some time.</p>
		    	</blockquote>
				<a href="#top"><div id="bottom"><h3></h3></div></a>
			<% end %>
		</div>
	</div>
	<div class="left">
		<div id="user_info">
			<h4><%= link_to @user.user_name, user_path(@user) %></h4>
			<p><i><%= @user.first_name %> <%= @user.last_name %></i></p>
			<p><%= @user.microposts.count %> Posts | <%= render "users/follow_stats" %></p>
		    <%= render 'users/follow_form' if signed_in? %>
			<% if @user.user_bio %>
				<p><small><%= @user.user_bio %></small></p>
			<% end %>
		</div>
	</div>
</div>