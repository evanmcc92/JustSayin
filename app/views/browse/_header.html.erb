<%= nav_bar :fixed => :top, :brand => image_tag("justsayin-logo-header.png", :alt => "JustSayin Logo") , :brand_link => "/" do %>
    <% if current_user %>
        <% menu_group :pull => :right do %>
            <%= form_tag(users_path, :method => 'get', :class => "search navbar-search") do %>
                <%= text_field_tag :search, params[:search], :class => "input-small appendedInputButton", :placeholder => "Search" %>
            <% end %>
            <%= menu_item " Home", root_path, {:class => "icon-home"} %>
            <%= drop_down " Settings" do %>
                <%= menu_item " My Profile", user_path(current_user), {:class => "icon-wrench"} %>
                <%= menu_item " Account Settings", edit_user_path(current_user), {:class => "icon-cog"} %>
                <%= drop_down_divider %>
                <%= menu_item " Log Out", logout_user_path, {:class => "icon-off"}  %>
            <% end %>
        <% end %>
    <% else %>
        <% menu_group :pull => :right do %>
            <%= menu_item "Sign Up/Login", signup_path %>
        <% end %>
    <% end %>
<% end %>