<%= nav_bar :fixed => :top, :brand => "SocialLiving", :brand_link => "/" do %>
    <% menu_group :pull => :right do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "Messages" %>
        <%= menu_item "Friends" %>
        <%= drop_down "Settings" do %>
			<%= menu_item "My Profile"%>
			<%= menu_item "Account Settings"%>
		<% end %>
        <% if current_user %>
            <%= menu_item "Log Out", log_out_path %>
        <% else %>
            <%= menu_item "Sign Up", signup_path %>
        <% end %>
    <% end %>
<% end %>